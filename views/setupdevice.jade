html
  head
    title #{namespace}
    script(src='//code.jquery.com/jquery-1.9.0.min.js')
    link(rel='stylesheet', href="/css/bootstrap.css")
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootswatch/2.1.1/readable/bootstrap.min.css')
    script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js')

  body
    div.navbar.navbar-inverse.navbar-fixed-top
      div.navbar-inner
        div.container-fluid
          a.brand(href="#") Entrance
    div.container
      div.page-header
        h1 Sync your Device With Your Facebook Account
    - if (deviceIds.length)
      h3 Found your device!
      each item in deviceIds
        li 
          a(href="/#{namespace}/sync/#{item.deviceid}") #{Click here to sync your device}
    else
      h3 No devices found. Please tap your device, then refresh your browser.

    