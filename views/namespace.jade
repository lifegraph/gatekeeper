html
  head
    title #{namespace}
    script(src='//code.jquery.com/jquery-1.9.0.min.js')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css')
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootswatch/2.1.1/readable/bootstrap.min.css')
    script(src='//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js')
    script(type='text/javascript')
      function updateKeys() {
        var apikey = $('#apikey').val();
        var secretkey = $('#secretkey').val();
        var permissions = $('#permissions').val();
        $.post('/#{namespace}/keys/' + apikey + '/' + secretkey + '/' + permissions , function(data) {
          $('#apikey').val('');
          $('#secretkey').val('');
          $('#permissions').val('');

          console.log("post data:");
          console.log(data);
        });
      }

  body
    h1 Welcome to #{namespace}
    #container
      div(class='textbox-div')
        | API Key: 
        input(type='text', id='apikey', autofocus)
      div(class='textbox-div')
        | Secret Key: 
        input(type='text', id='secretkey')
      div(class='textbox-div')
        | Permissions: 
        input(type='text', id='permissions', placeholder='user_actions.music,friends_actions.music,user_likes,friends_likes')
      div#button-div
        button(type='button', id='updatekeys', class='btn btn-primary', data-loading-text='Loading...', onclick='updateKeys();') Update
    #fbids
      | #{fbids}